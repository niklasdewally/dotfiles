# vim: filetype=conf:

CanonicalDomains dewally.com cs.st-andrews.ac.uk
CanonicalizeHostname yes
CanonicalizeMaxDots 5

Host *
    AddKeysToAgent yes
    UseKeychain yes

Host *.dewally.com
    User niklas

Host *.cs.st-andrews.ac.uk
    User nd60

Host hostcs
    HostName nd60.teaching.cs.st-andrews.ac.uk
    User nd60

Host lab1
    HostName pc8-055-l

Host lab2
    HostName pc8-068-l

Host lab3
    HostName pc8-077-l

Host lab4
    HostName pc8-003-l

Match Host *.cs.st-andrews.ac.uk,138.251.*
    User nd60

Host bigboi
    Hostname 80.229.253.82
    Port 69

Host cs3099group
    HostName cs3099user24.teaching.cs.st-andrews.ac.uk
    User cs3099user24

Match Host !jump.cs.st-andrews.ac.uk,*.st-andrews.ac.uk,138.251.*
    ProxyJump jump.cs.st-andrews.ac.uk

