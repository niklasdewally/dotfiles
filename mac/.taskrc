# Files
data.location=/Users/niklas/.task

# Color theme
#include /opt/homebrew/share/doc/task/rc/dark-16.theme

# Default command is next
default.command=next

#########################
#        REPORTS        #
#########################

# Waiting PRs are considered blockers, as i set PR tasks to waiting when I'm waiting on feedback.
report.blocked.filter  = (status:pending +BLOCKED) or (+WAITING +gh)
report.blocking.filter = (status:pending +BLOCKING) or (+WAITING +gh +BLOCKING)
report.ready.filter = status:pending -WAITING -BLOCKED 

##############################
#        REPORT: next        #
##############################

# For next task, show number of annotations but not annotations itself
report.next.labels  =  ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg
report.next.columns = id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description.count,urgency

################################
#        REPORT: GITHUB        #
################################
# GH report
report.gh.description=Github Issues
report.gh.labels=ID,Active,Age,P,Project,Repo,Type,Title,Tags,Due,Urg
report.gh.columns=id,start.age,entry.age,priority,project,githubnamespace,githubtype,description.desc,tags,due.relative,urgency
report.gh.sort=urgency-
report.gh.filter= status:pending -WAITING +gh

# Show GH with less metadata, but with the URL
report.ghurl.description=Github URLS
report.ghurl.labels=ID,Project,Repo,Title,URL,Urg
report.ghurl.columns=id,project,githubnamespace,description.truncated,githuburl,urgency
report.ghurl.sort=urgency-
report.ghurl.filter= status:pending -WAITING +gh

###############################
#        REPORT: INBOX        #
###############################
#
report.inbox.description=Inbox (tasks without a project)
report.inbox.labels=ID,Active,Age,Deps,P,Tag,Recur,S,Due,Until,Description,Urg
report.inbox.columns=id,start.age,entry.age,depends,priority,tags,recur,scheduled.countdown,due.relative,until.remaining,description.count,urgency
report.inbox.filter=status:pending -PROJECT
report.ghurl.sort=urgency-


