# vim: filetype=gitconfig:
[user]
    name= "{{ .name }}"
    email= "{{ .email }}"

[core]
    editor = vim 
    autocrlf = input
    excludesFile=~/.gitignore.global

[alias]
    graph = log --all --decorate --oneline --graph


[pull]
    rebase = true

{{- if eq .chezmoi.username "niklas"}}
[init]
    defaultBranch=main
{{- end}}
